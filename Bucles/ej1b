<?php

$num="168";

$binario = "";

$num2 = $num;

do {
    $resto = $num % 2; /* calculamos el resto que serÃ¡ 1 o 2*/
    $binario = $resto . $binario; /*concatenamos al principio de la cadena */
    $num = (int)($num / 2);  /*lo convertimos en entero para que el bucle termine */   
} while ($num > 0);

echo "Numero $num2 en binario = $binario";
?>
