<?php

$num="48";
$base = 8;

$num2 = $num;
$conversion = "";

do {
    $resto = $num % $base; /* calculamos el resto segÃºn la base indicada*/
    $conversion= $resto . $conversion; /*concatenamos al principio de la cadena */
    $num = (int)($num / $base);    
} while ($num > 0);

echo "Numero $num2 en base $base = $conversion";
?>
